void sortZeroesAndOne(int *input, int size)
{
     int zero=0;
    int one=0;
    
    for(int i=0;i<size;i++)
    {
        if(input[i]==0)
        {
            zero++;
        }
        else
        {
          one++;  
        }
    }
    int index=0;
    for(int i = 0 ; i<zero; i++)
    {
        input[index++]= 0;
    }
    for(int i= 0; i<one; i++)
    {
        input[index++]= 1;
    }
}